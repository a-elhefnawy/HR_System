@model IEnumerable<HR_System.PAL.ViewModels.AppUserVM>

@{
    ViewData["Title"] = "Index";
}

<h1>المستخدمين</h1>

<p>
    <a class="btn btn-primary" href="/user/add">إضافة مستخدم جديد</a>
</p>

<form method="post" class="mt-5" action="/user/search">
    <input type="text" name="name" class="form-control mb-3" />
    <input class="btn btn-primary" type="submit" value="بحث" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                الاسم كامل
            </th>
            <th>
                اسم المستخدم
            </th>
            <th>
                كلمة المرور
            </th>
            <th>
                اسم البريد
            </th>
            <th>
                المجموعة
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.role)
            </td>
            <td>
                <a class="btn btn-primary" href="/user/edit/@item.Id" >تعديل</a>
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                <a class="btn btn-danger" href="/user/delete/@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
