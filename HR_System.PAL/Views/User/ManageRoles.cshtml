@model UserRoleVM
@{
    ViewData["Title"] = "ManageRoles";
}

<h1 class="text-center">تعديل المجموعة</h1>

<form method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>@Model.UserName</h2>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="UserId" />
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].DisplayValue" />
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">@Model.Roles[i].DisplayValue</label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">حفظ</button>
            <a asp-action="Index" class="btn btn-warning">رجوع</a>
        </div>
    </div>
</form>
