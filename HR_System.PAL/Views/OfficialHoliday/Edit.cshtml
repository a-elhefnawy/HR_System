@model OfficialHoliday

@{
    ViewData["Title"] = $"تعديل {Model.Name}";
}

<form method="post" class="row">
    <div class="col-md-6 col-sm-12">
        <h5>تعديل @Model.Name</h5>
        <div class="form-group mt-2">
            <label class="mb-2">الإسم</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label class="mb-2">التاريخ</label>
            <input asp-for="Date" type="date" class="form-control datepicker" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="تعديل الأجازة" class="btn btn-success" />
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'dd/MM/yyyy',
                autoclose: true
            });
        });
    </script>
}