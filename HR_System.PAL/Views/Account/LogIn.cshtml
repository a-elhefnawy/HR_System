@model HR_System.PAL.ViewModels.LogInVM

@{
    ViewData["Title"] = "LogIn";
}

<h1 class="text-center">تسجيل الدخول</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LogIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="userName" class="control-label">اسم المستخدم</label>
                <input asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
                <div class="form-group m-3">
                <label asp-for="password" class="control-label">كلمة المرور</label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group form-check m-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="rememberMe" /> تتذكرني
                </label>
            </div>
                <div class="form-group m-3">
                <input type="submit" value="تسجيل الدخول" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
