@model HR_System.PAL.ViewModels.AddAttendenceDataVMcs

@{
    ViewData["Title"] = "تسجيل حضور الموظفين";
}


<style>
    .parent {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Center the form horizontally */
    from, .panel, .panel-heading {
        min-width: 300px;
        width: 600px;
        max-width: 500px;
    }

    form {
        background-color: #fff;
        min-height: 300px
    }

        /* Set a white background and rounded borders */
        form.row {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
        }

        /* Add some margin and padding to the form elements */
        form .form-group {
            margin-bottom: 20px;
            padding: 0 10px;
        }

        /* Style the input fields */
        form input[type="text"],
        form input[type="date"] {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Style the submit button */
        form input[type="submit"] {
            /*background-color: #28a745;*/
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            font-size: 16px;
            cursor: pointer;
        }

        /* Add some margin to the submit button */
        form .form-group:last-child {
            margin-bottom: 0;
        }
</style>


<div class="parent">
    <div class="panel panel-default templatemo-content-widget white-bg no-padding templatemo-overflow-hidden">
        <div class="panel-heading templatemo-position-relative" style="background-color:#0d6efd">
            <h2 class="text-uppercase">حضور وانصراف</h2>
        </div>
        <form asp-action="Add" class="row p-3 mt-3">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <div class="d-flex align-items-center justify-content-between">
                    <label asp-for="DepartmentId" class="control-label">القسم</label>
                    <select asp-for="DepartmentId" asp-items="@ViewBag.Deptartments" onchange="GetEmployees()" class="form-control w-75">
                        <option value="0">--اختر القسم--</option>
                    </select>
                </div>
                <div class="d-flex justify-content-end">
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex align-items-center justify-content-between">
                    <label asp-for="EmployeeId" class="control-label">اسم الموظف</label>
                    <select asp-for="EmployeeId" name="EmployeeId" id="EmployeeId" class="form-control w-75">
                    </select>
                </div>
                <div class="d-flex justify-content-end">
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <div class="d-flex align-items-center justify-content-between">
                    <label asp-for="AttendenceTime" class="control-label ">موعد الحضور</label>
                    <input asp-for="AttendenceTime" class="form-control w-75" type="time" />
                </div>
                <div class="d-flex justify-content-end">
                    <span asp-validation-for="AttendenceTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex align-items-center justify-content-between">
                    <label asp-for="LeavingTime" class="control-label">موعد الإنصراف</label>
                    <input asp-for="LeavingTime" class="form-control w-75" type="time" />
                </div>
                <div class="d-flex justify-content-end">
                    <span asp-validation-for="LeavingTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex align-items-center justify-content-between">
                    <label asp-for="DayDate" class="control-label ">تاريخ اليوم</label>
                    <input asp-for="DayDate" class="form-control w-75" type="date" />
                </div>
                <div class="d-flex justify-content-end">
                    <span asp-validation-for="DayDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-4 d-flex justify-content-center">
                <input type="submit" value="إضافـة" style="background-color: var(--main-color)" class="btn align-self-start fs-5 w-50" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function GetEmployees() {
            var deptId = document.getElementById("DepartmentId").value;
            console.log(deptId);
            $.ajax({
                url: "/Attendence/GetEmployeesByDeptId?id=" + deptId,
                success: function (result) {
                    console.log(result);
                    document.getElementById("EmployeeId").innerHTML = "";
                    for (let i of result) {
                        document.getElementById("EmployeeId").innerHTML +=
                            "<option value='" + i.id + "'>" + i.name + "</option>"
                    }
                }
            });

        }
    </script>
}




<style>
    .my-form {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f8f8f8;
        margin-top: 10px;
    }

</style>