@model HR_System.PAL.ViewModels.GeneralSittingsVM

@{
    ViewData["Title"] = "Add";
}
<style>
    .parent {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Center the form horizontally */
    from, .panel, .panel-heading {
        min-width: 300px;
        width: 600px;
        max-width: 500px;

    }

    form {
        background-color: #fff;
        min-height: 300px
    }

        /* Set a white background and rounded borders */
        form.row {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
        }

        /* Add some margin and padding to the form elements */
        form .form-group {
            margin-bottom: 20px;
            padding: 0 10px;
        }

        /* Style the input fields */
        form input[type="text"],
        form input[type="date"] {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Style the submit button */
        form input[type="submit"] {
            /*background-color: #28a745;*/
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            font-size: 16px;
            cursor: pointer;
        }

        /* Add some margin to the submit button */
        form .form-group:last-child {
            margin-bottom: 0;
        }
</style>


<div class="parent">
    <div class="panel panel-default templatemo-content-widget white-bg no-padding templatemo-overflow-hidden">
        <div class="panel-heading templatemo-position-relative" style="background-color:#0d6efd">
            <h2 class="text-uppercase">الإعدادات العامة</h2>
        </div>
        <form asp-action="Add" class="row p-3 mt-3">
@*            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
*@            <div class="form-group">
                <div class="d-flex align-items-center">
                    <label asp-for="overTime" class="control-label fs-6 ms-2">الإضافة</label>
                    <input asp-for="overTime" class="form-control" placeholder="2 ساعة" min="0" />
                </div>
                <div class="d-flex justify-content-end">
                    <span asp-validation-for="overTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex align-items-center">
                    <label asp-for="underTime" class="control-label fs-6 ms-2">الخصـم</label>
                    <input asp-for="underTime" class="form-control" placeholder="2 ساعة" min="0" />
                </div>
                <div class="d-flex justify-content-end">
                    <span asp-validation-for="underTime" class="text-danger"></span>
                </div>
            </div>
            <h3 class="p-2 mb-2">الأجازات الأسبوعية</h3>
            <div class="form-group">
                <div class="d-flex align-items-center">
                    <label asp-for="week_end_Day1" class="control-label fs-6 ms-3">اليوم الأول</label>
                    <select asp-for="week_end_Day1" class="form-control w-75">
                        <option>السبت</option>
                        <option>الإحد</option>
                        <option>الاثنين</option>
                        <option>الثلاثاء</option>
                        <option>الاربعاء</option>
                        <option>الخميس</option>
                        <option>الجمعة</option>
                    </select>
                </div>
                <div class="d-flex justify-content-end">
                    <span asp-validation-for="week_end_Day1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex align-items-center">
                    <label asp-for="week_end_Day2" class="control-label fs-6 ms-2">اليوم الثاني</label>
                    <select asp-for="week_end_Day2" class="form-control w-75">
                        <option>السبت</option>
                        <option>الإحد</option>
                        <option>الاثنين</option>
                        <option>الثلاثاء</option>
                        <option>الاربعاء</option>
                        <option>الخميس</option>
                        <option>الجمعة</option>
                    </select>
                </div>
                <div class="d-flex justify-content-end">
                    <span asp-validation-for="week_end_Day2" class="text-danger"></span>
                </div>
            </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-4 d-flex justify-content-center">
                <input type="submit" value="إضافـة" style="background-color: var(--main-color)" class="btn align-self-start fs-5 w-50" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
